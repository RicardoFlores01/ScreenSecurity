<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <TextView
        android:id="@+id/icon_more"
        android:layout_height="35dp"
        android:layout_width="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/ic_baseline_person_24" />

    <Button
        android:id="@+id/setting"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Profile"
        android:textSize="22sp"
        android:backgroundTint="#ffffff"
        android:textColor="#8492A6"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="@id/icon_more"
        app:layout_constraintLeft_toRightOf="@id/icon_more"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-13dp"
        android:textAllCaps="false"
        android:letterSpacing="0.0"/>

    <View
        android:id="@+id/linea"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#8492A6"
        app:layout_constraintLeft_toLeftOf="@id/icon_more"
        app:layout_constraintTop_toBottomOf="@+id/icon_more"/>

    <!-- FIRST -->
    <TextView
        android:id="@+id/icon_more1"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:background="@drawable/ic_baseline_feedback_24"
        app:layout_constraintTop_toBottomOf="@id/linea"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/title1"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Language"
        android:textSize="22sp"
        android:backgroundTint="#ffffff"
        android:textColor="#8492A6"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="@id/icon_more1"
        app:layout_constraintLeft_toRightOf="@id/icon_more1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-13dp"
        android:textAllCaps="false"
        android:letterSpacing="0.0"/>

    <View
        android:id="@+id/linea1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="20dp"
        android:background="#8492A6"
        app:layout_constraintLeft_toLeftOf="@id/icon_more1"
        app:layout_constraintTop_toBottomOf="@+id/icon_more1"/>

    <!-- SECOND -->
    <TextView
        android:id="@+id/icon_more2"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:background="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintTop_toBottomOf="@id/linea1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/title2"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="About"
        android:textSize="22sp"
        android:backgroundTint="#ffffff"
        android:textColor="#8492A6"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="@id/icon_more2"
        app:layout_constraintLeft_toRightOf="@id/icon_more2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-13dp"
        android:textAllCaps="false"
        android:letterSpacing="0.0"/>

  </androidx.constraintlayout.widget.ConstraintLayout>