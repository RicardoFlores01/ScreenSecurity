<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsFragment" >

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tools"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textSize="30sp"
        android:textColor="#47525E"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/profile"
        android:layout_height="155sp"
        android:layout_width="155dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp">

        <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/ic_baseline_person_24"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/devices"
        android:layout_height="155sp"
        android:layout_width="155dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintLeft_toRightOf="@id/profile">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_baseline_devices_24"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVICES"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="100dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/findevice"
        android:layout_height="155sp"
        android:layout_width="155dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/profile"
        app:layout_constraintLeft_toLeftOf="@id/profile">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_baseline_location_on_24"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIND DEVICE"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="100dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/pin"
        android:layout_height="155sp"
        android:layout_width="155dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/devices"
        app:layout_constraintLeft_toLeftOf="@id/devices">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_baseline_lock_24"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIN"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="100dp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/myapps"
        android:layout_height="155sp"
        android:layout_width="155dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintTop_toBottomOf="@id/findevice"
        app:layout_constraintLeft_toLeftOf="@id/findevice">

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/ic_baseline_apps_24"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="25dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY APPS"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>